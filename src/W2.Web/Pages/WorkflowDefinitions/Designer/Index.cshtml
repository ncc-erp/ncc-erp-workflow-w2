@page
@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.Configuration
@using W2.Localization

@inject IConfiguration Configuration;
@inject IStringLocalizer<W2Resource> L

@{
    var elsaServerUrl = Configuration["ElsaConfiguration:Server:BaseUrl"];
}
@model W2.Web.Pages.WorkflowDefinitions.Designer.IndexModel

@section scripts 
{
    <partial name="_ElsaScripts" />
}
@section styles
{
    <partial name="_ElsaStyles" />
}

@Html.AntiForgeryToken()

<elsa-studio-root server-url="@elsaServerUrl" monaco-lib-path="_content/Elsa.Designer.Components.Web/monaco-editor/min" config="designer.config.json">
    <elsa-workflow-definition-editor-screen workflow-definition-id="@Model.WorkflowDefinitionId"></elsa-workflow-definition-editor-screen>
</elsa-studio-root>